<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="content">
            <block class="RedChamps\ShareCart\Block\SharedCarts\ListCarts" name="shared.carts.list" cacheable="false" template="RedChamps_ShareCart::shared_carts/list.phtml">
                <action method="setTitle">
                    <argument translate="false" name="title" xsi:type="string">Shared Shopping Carts</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>